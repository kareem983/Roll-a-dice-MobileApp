<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Movable_imageView"
        android:layout_width="144dp"
        android:layout_height="89dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/dice6"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/roll_btn"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:text="Roll"
        android:textColor="#00f"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/Result_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/num1" />

    <TextView
        android:id="@+id/Result_textView"
        android:layout_width="152dp"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="the result"
        android:textColor="#00f"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/TopLine_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="____________"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="-10dp"
        android:textColor="#F00"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/BottomLine_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="____________"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="80dp"
        android:textColor="#F00"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/LeftLine_textView"
        android:layout_width="5dp"
        android:layout_height="90dp"
        android:background="#f00"
        android:text="|"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="25dp"
        android:textColor="#F00"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/RightLine_textView"
        android:layout_width="5dp"
        android:layout_height="90dp"
        android:background="#f00"
        android:text="|"
        android:layout_marginLeft="326dp"
        android:layout_marginTop="25dp"
        android:textColor="#F00"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Movable_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="____________"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="260dp"
        android:textColor="#F00"
        android:textSize="30dp" />


</RelativeLayout>